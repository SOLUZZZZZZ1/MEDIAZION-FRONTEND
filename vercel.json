{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.mediazion.eu" }],
      "destination": "https://mediazion.eu/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/((?!api/).*)(?<!\\.[a-zA-Z0-9]{2,5})", "destination": "/index.html" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}